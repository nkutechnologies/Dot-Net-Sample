@model IEnumerable<RWFOUNDATIONWebsite.DataModels.Packages.PackageDetail>
@{
    ViewData["Title"] = "PackageItemsList";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

@if (Model.Any())
{
    <div class="card border-0 p-1">
        <div class="card-header">
            <div class="row">
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-6">
                    <div class="text-muted text-left">
                        <h4 class="card-title">All Packages With Items</h4>
                    </div>
                </div>
                <div class="col-xl-4 col-lg-4 col-md-4 col-sm-4 col-4">

                </div>
                <div class="col-xl-2 col-lg-2 col-md-2 col-sm-2 col-2">
                    <a asp-controller="Package" asp-action="AddPackageItem" class="btn btn-warning text-white float-right">New</a>
                </div>
            </div>
        </div>
        <table class="table  table-striped table-bordered dataTable" role="grid" id="packagedetailtbl" width="100%">
            <thead class="">
                <tr>
                    <th>Package Name</th>
                    <th>Package Value(PKR)</th>
                    <th>Package Value(SR)</th>
                    <th>Package Value(USD)</th>
                    <th>Main Package</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {

                    <tr>
                        <td>@item.PackageDetailName</td>
                        <td>PKR @item.PackageValuePKR</td>
                        <td>SAR @item.PackageValueSR</td>
                        <td>$@item.PackageValueUSD</td>
                        <td>@item.Package.PackageName</td>
                        <td class="d-inline-flex">
                            <a asp-controller="Package" asp-action="DetailPackageItem" title="Details" asp-route-Id="@item.PackageDetailId" class="btn btn-sm btn-light mr-1  border-0"> <i class="feather icon-list text-dark"></i></a>
                            <a asp-controller="Package" asp-action="UpdatePackageItem" title="Update" asp-route-Id="@item.PackageDetailId" class="btn btn-sm btn-dark mr-1 text bg-warning border-0"> <i class="feather icon-edit-2 text-white"></i></a>
                            <a onclick="DeletePackage(@item.PackageDetailId)" title="Delete"  class="btn btn-sm btn-dark mr-1 bg-danger border-0"><i class="feather icon-trash-2 text-white"></i></a>
                        </td>
                    </tr>

                }

            </tbody>
        </table>
    </div>

}
else
{
    <div class="card bg-white border-0">

        <div class="card-body px-lg-5 py-lg-5">
            <h5 class="card-title"> There is No Package Item Created yet!!!!</h5>
            <p class="text-success">Do you want to Create New?  Click <div class="row"><a asp-controller="Package" asp-action="AddPackageItem" class="btn btn-info float-right">New</a></div></p>
        </div>

    </div>
}

