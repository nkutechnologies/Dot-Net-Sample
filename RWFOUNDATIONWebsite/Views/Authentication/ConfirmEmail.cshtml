
@{
    ViewData["Title"] = "ConfirmEmail";
    Layout = "~/Views/Shared/_LoginSignUpLayout.cshtml";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-xl-4 col-lg-4 col-md-4 col-sm-12 col-12 offset-xl-4 offset-lg-4 offset-md-4">
            <div class="card">
                <div class="p-4 p-sm-5">
                    <div class="display-1 lnr lnr-checkmark-circle text-center text-success mb-4"></div>
                    <p class="text-center text-big mb-4">Your email address has been successfully confirmed.</p>
                    <a asp-action="Login" asp-controller="Authentication" class="btn btn-primary btn-block">Proceed to your account</a>
                </div>
            </div>
        </div>
    </div>    
</div>
    

