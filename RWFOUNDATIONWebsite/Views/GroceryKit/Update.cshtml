                                                <div class="input-wrap">
                                                    <input type="number" id="schoolcostupdate" value="@Model.SchoolCost" class="form-control" placeholder="00.00">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-xl-3 col-lg-3 col-md-3 col-sm-12 col-12">
                                            <label class="text-dark font-weight-bold">Utilities Cost:</label>
                                        </div>
                                        <div class="col-xl-9 col-lg-9 col-md-9 col-sm-12 col-12">
                                            <div class="form-group">
                                                <div class="input-wrap">
                                                    <input type="number" id="utilitiescostupdate" value="@Model.UtilitiesCost" class="form-control" placeholder="00.00">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
