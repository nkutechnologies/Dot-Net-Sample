                                            <label class="text-dark font-weight-bold">Donations:</label>
                                        </div>
                                        <div class="col-xl-9 col-lg-9 col-md-9 col-sm-12 col-12">
                                            <div class="form-group">
                                                <div class="input-wrap">
                                                    <input type="number" id="donationsupdate" value="@Model.Donations" class="form-control" placeholder="00.00" required>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
