@model RWFOUNDATIONWebsite.DataModels.Master.GroceryKit
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}



    <section class="main-section Appointment blog bg-light">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="appointment-wrap bg-white p-4 p-md-5  align-items-center">
                        <form id="grocerykitform_update" class="appointment-form" enctype="multipart/form-data">
                            <div class="row">
                                <div class="col-8">
                                    <h3>Update Application for Grocery Kit</h3>
                                </div>
                                <div class="col-4">
                                    <h6 class="text-danger float-right">Form No# @Model.FormNo</h6>
                                </div>
                            </div>
                            <input hidden id="formnumber" value="@Model.FormNo" />
                            <input hidden id="grocerykitId" value="@Model.GroceryKitId" />
                            <input hidden id="existingimageurl" asp-for="@Model.ImageUrl" />
                            <input hidden id="existingcnicfronturl" asp-for="@Model.CNICFrontUrl" />
                            <input hidden id="existingcnicbackurl" asp-for="@Model.CNICBackUrl" />
                            <input hidden id="existingdisabilityurl" asp-for="@Model.DisabilityCertificateUrl" />
                            <input hidden id="existingdeathurl" asp-for="@Model.DeathCertificateUrl" />
                            <input hidden id="existingbformurl" asp-for="@Model.BFormUrl" />
                            <input hidden id="existingelectricityurl" asp-for="@Model.ElectricityBill" />
                            <input hidden id="existingptclurl" asp-for="@Model.PtclBillUrl" />
                            <input hidden id="existingappurl" asp-for="@Model.ApplicationUrl" />
                            <input hidden id="existingotherdoc1url" asp-for="@Model.OtherDocument1Url" />
                            <input hidden id="existingotherdoc2url" asp-for="@Model.OtherDocument2Url" />
                            <input hidden id="existingvideo" asp-for="@Model.VideoUrl" />
                            <input hidden id="existingaudio" asp-for="@Model.AudioUrl" />
                            <div class="row">
                                <div class="col-lg-4">
                                    <label class="text-dark">First Name</label>
                                    <div class="form-group">
                                        <div class="input-wrap">
                                            <input type="text" id="firstnameupdate" name="firstnameupdate" value="@Model.FirstName" class="form-control" placeholder="First Name">
                                        </div>
                                    </div>

                                </div>
                                <div class="col-lg-4">
                                    <label class="text-dark">Last Name</label>
                                    <div class="form-group">
                                        <div class="input-wrap">
                                            <input type="text" id="lastnameupdate" name="lastnameupdate" value="@Model.LastName" class="form-control" placeholder="Last Name">
                                        </div>
                                    </div>

                                </div>
                                <div class="col-lg-4">
                                    <label class="text-dark">Father/Husband Name</label>
                                    <div class="form-group">
                                        <div class="input-wrap">
                                            <input type="text" id="fatherorhusbandnameupdate" name="fatherorhusbandnameupdate" value="@Model.FatherOrHusbandName" class="form-control" placeholder="Father/ Husband Name">
                                        </div>
                                    </div>

                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-4">
                                    <label class="text-dark">Medical Probs</label>
                                    <div class="form-group">
                                        <div class="form-field">
                                            <div class="select-wrap">
                                                <select name="medicalprobupdate" id="medicalprobupdate" class="form-control" asp-items="ViewBag.MedicalProb" asp-for="@Model.MedicalProbId">
                                                </select>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                                <div class="col-lg-4">
                                    <label class="text-dark">Phone Number 1</label>
                                    <div class="form-group">
                                        <div class="input-wrap">
                                            <input type="text" id="phonenumber1update" name="phonenumber1update" value="@Model.PhoneNumber1" class="form-control" placeholder="(92) 333 0000000">
                                        </div>
                                    </div>

                                </div>
                                <div class="col-lg-4">
                                    <label class="text-dark">Phone Number 2</label>
                                    <div class="form-group">
                                        <div class="input-wrap">
                                            <input type="text" id="phonenumber2update" name="phonenumber2update" value="@Model.PhoneNumber2" class="form-control" placeholder="(92) 333 0000000">
                                        </div>
                                    </div>

                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-4">
                                    <label class="text-dark">CNIC</label>
                                    <div class="form-group">
                                        <div class="input-wrap">
                                            <input type="text" id="cnicupdate" name="cnicupdate" value="@Model.CNIC" class="form-control" placeholder="35202-0001110-0">
                                        </div>
                                    </div>

                                </div>
                                <div class="col-lg-4">
                                    <label class="text-dark">Old Form No</label>
                                    <div class="form-group">
                                        <div class="input-wrap">
                                            <input type="text" id="oldformnoupdate" name="oldformnoupdate" value="@Model.OldFormNo" class="form-control" placeholder="Enter Old Form Number">
                                        </div>
                                    </div>

                                </div>

                                <div class="col-lg-4">
                                    <label class="text-dark">Merital Status</label>
                                    <div class="form-group">
                                        <div class="form-field">
                                            <div class="select-wrap">
                                                <select id="meritalstatusupdate" name="meritalstatusupdate" asp-for="MeritalStatus" class="form-control">
                                                    <option value="Married">Married</option>
                                                    <option value="Single">Single</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-4">
                                    <label class="text-dark">Current Status</label>
                                    <div class="form-group">
                                        <div class="form-field">
                                            <div class="select-wrap">
                                                <select name="currentstatusupdate" id="currentstatusupdate" class="form-control" asp-items="ViewBag.CurrentStatus" asp-for="@Model.CurrentStatusId">
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <label class="text-dark">Gender</label>
                                    <div class="form-group">
                                        <div class="form-field">
                                            <div class="select-wrap">
                                                <select name="genderupdate" id="genderupdate" asp-for="@Model.Gender" class="form-control">
                                                    <option value="Male">Male</option>
                                                    <option value="Female">Female</option>
                                                    <option value="Shemale">Shemale</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <label class="text-dark">Residence Status</label>
                                    <div class="form-group">
                                        <div class="form-field">
                                            <div class="select-wrap">
                                                <select name="residencestatusupdate" id="residencestatusupdate" asp-for="@Model.ResidenceStatus" class="form-control">
                                                    <option value="Rented">Rented</option>
                                                    <option value="Own">Own</option>
                                                    <option value="Others">Others</option>
                                                    <option value="Homeless">Homeless</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-4">
                                    <label class="text-dark">Occupation</label>
                                    <div class="form-group">
                                        <div class="form-field">
                                            <div class="select-wrap">
                                                <select name="occupationupdate" id="occupationupdate" class="form-control" asp-items="ViewBag.Occupation" asp-for="@Model.OccupationId">
                                                </select>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                                <div class="col-lg-4">
                                    <label class="text-dark">Province</label>
                                    <div class="form-group">
                                        <div class="form-field">
                                            <div class="select-wrap">
                                                <select name="provinceupdate" id="provinceupdate" class="form-control" asp-items="ViewBag.Province" asp-for="@Model.ProvinceId">
                                                </select>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                                <div class="col-lg-4">
                                    <label class="text-dark">City</label>
                                    <div class="form-group">
                                        <div class="form-field">
                                            <div class="select-wrap">
                                                <select name="cityupdate" id="cityupdate" class="form-control" asp-items="ViewBag.City" asp-for="@Model.CityId">
                                                </select>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-4">
                                    <label class="text-dark">Update Photo</label>
                                    <div class="form-group">
                                        <div class="input-wrap">
                                            <input type="file" id="photoupdate" name="photoupdate" class="form-control" placeholder="Add Photo">
                                        </div>
                                    </div>

                                </div>
                                <div class="col-lg-4">
                                    <label class="text-dark">Date Of Birth?</label>
                                    <div class="form-group">
                                        <div class="input-wrap">
                                            <input type="date" id="dateofbirthupdate" name="dateofbirthupdate" class="form-control" placeholder="Date Of Birth" value="@Model.DateOfBirth.ToString("yyyy-MM-dd")">
                                        </div>
                                    </div>

                                </div>
                                <div class="col-lg-4">
                                    <label class="text-dark">Address</label>
                                    <div class="form-group">
                                        <div class="input-wrap">
                                            <input type="text" id="addressupdate" name="addressupdate" value="@Model.Address" class="form-control" placeholder="Address">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    @if (Model.ImageUrl != null)
                                    {
                                        <img src="~/Images/MainPhoto/@Model.ImageUrl" height="150" width="150" alt="Alternate Text" />
                                    }
                                    else
                                    {
                                        <img src="~/assets/img/RW/userimage.png" height="150" width="150" alt="Alternate Text" />
                                    }

                                </div>
                            </div>
                            <div class="text-center">
                                <h5 class="text-dark font-weight-bold text-danger">Family Members Details</h5>
                            </div>
                            <div class="row">
                                <div class="col-md-12 align-items-center">
                                    <a onclick="AddNewRowupdate()" class="btn btn-sm bg-warning float-right text-white "><i class="icofont-plus text-white mr-1"></i>Add New Row</a>
                                    <table class="table table-light" id="GroceryKitTblupdate">
                                        <thead class="bg-warning text-white">
                                            <tr class="text-center">
                                                <th>Name</th>
                                                <th>Relation</th>
                                                <th>Age</th>
                                                <th>Status</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody class="text-center">
                                            @foreach (var item in Model.FamilyMembers)
                                            {
                                                <tr>
                                                    <td>
                                                        <div class="form-group">
                                                            <div class="input-wrap">
                                                                <input type="text" value="@item.Name" class="form-control" placeholder="Name">
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <div class="form-field">
                                                            <div class="select-wrap">
                                                                <select name="relationupdate" class="form-control" asp-items="ViewBag.Relations" asp-for="@item.RelationId">
                                                                </select>
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <div class="form-group">
                                                            <div class="input-wrap">
                                                                <input type="number" value="@item.Age" class="form-control" placeholder="Age">
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <div class="form-field">
                                                            <div class="select-wrap">
                                                                <select class="form-control" asp-items="ViewBag.FamilyMemberStatus" asp-for="@item.FamilyMemberStatusId">
                                                                    <option data-id="" disabled>Select</option>

                                                                </select>
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td><a title="Delete Row" onclick="deleteRowupdate(this)" class="btn btn-sm bg-danger border-0 text-white"><i class="feather icon-trash-2"></i></a></td>
                                                </tr>
                                            }
                                            <tr class="sampleRowupdate" style="display: none" id="rowupdate">
                                                <td>
                                                    <div class="form-group">
                                                        <div class="input-wrap">
                                                            <input type="text" id="familymembernameupdate" class="form-control" placeholder="Name">
                                                        </div>
                                                    </div>
                                                </td>
                                                <td>
                                                    <div class="form-field">
                                                        <div class="select-wrap">
                                                            <select name="relationupdate" id="relationupdate" class="form-control" asp-items="ViewBag.Relations">
                                                                <option data-id="" disabled>Select</option>

                                                            </select>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td>
                                                    <div class="form-group">
                                                        <div class="input-wrap">
                                                            <input type="number" id="familymemberageupdate" value="0" class="form-control" placeholder="Age">
                                                        </div>
                                                    </div>
                                                </td>
                                                <td>
                                                    <div class="form-field">
                                                        <div class="select-wrap">
                                                            <select name="familymemberstatusupdate" id="familymemberstatusupdate" class="form-control" asp-items="ViewBag.FamilyMemberStatus">
                                                                <option data-id="" disabled>Select</option>

                                                            </select>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td><a title="Delete Row" onclick="deleteRowupdate(this)" class="btn btn-sm bg-danger border-0 text-white"><i class="feather icon-trash-2"></i></a></td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <div class="text-center mt-3 mb-3">
                                <h5 class="text-dark font-weight-bold text-danger">Short Fall In Cash Calculator</h5>
                            </div>
                            <div class="row">
                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
                                    <div class="row">
                                        <div class="col-xl-3 col-lg-3 col-md-3 col-sm-12 col-12">
                                            <label class="text-dark font-weight-bold">Food Cost:</label>
                                        </div>
                                        <div class="col-xl-9 col-lg-9 col-md-9 col-sm-12 col-12">
                                            <div class="form-group">
                                                <div class="input-wrap">
                                                    <input type="number" id="foodcostupdate" class="form-control" value="@Model.FoodCost" placeholder="00.00">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-xl-3 col-lg-3 col-md-3 col-sm-12 col-12">
                                            <label class="text-dark font-weight-bold">House Rent:</label>
                                        </div>
                                        <div class="col-xl-9 col-lg-9 col-md-9 col-sm-12 col-12">
                                            <div class="form-group">
                                                <div class="input-wrap">
                                                    <input type="number" id="houserentupdate" value="@Model.HouseRent" class="form-control" placeholder="00.00">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-xl-3 col-lg-3 col-md-3 col-sm-12 col-12">
                                            <label class="text-dark font-weight-bold">School Cost:</label>
                                        </div>
                                        <div class="col-xl-9 col-lg-9 col-md-9 col-sm-12 col-12">
