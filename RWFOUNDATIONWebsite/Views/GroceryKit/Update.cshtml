                                            <div class="form-group">
                                                <div class="input-wrap">
                                                    <input type="number" id="totalincomeupdate" value="@Model.TotalIncome" class="form-control" placeholder="00.00" disabled>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
