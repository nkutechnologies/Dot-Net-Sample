@model IEnumerable<GroceryKitViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}


    <div class="card border-0 p-1">
        <div class="card-header">
            <div class="row">
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-6">
                    <div class="text-muted text-left">
                        <h4 class="card-title">List Of Beneficiaries</h4>
                    </div>
                </div>
                <div class="col-xl-4 col-lg-4 col-md-4 col-sm-4 col-4">
                    <a onclick="GetAssignFamilies()" id="assignbtn" class="btn btn-success text-white float-right d-none">Assign</a>
                </div>
                <div class="col-xl-2 col-lg-2 col-md-2 col-sm-2 col-2">
                    <a asp-controller="GroceryKit" asp-action="GroceryKitForm" class="btn btn-warning text-white float-right">New</a>
                </div>
            </div>
        </div>
        <table class="table table-responsive table-striped table-bordered dataTable" role="grid" id="grocerkittable" width="100%">
            <thead class="">
                <tr>
                    <th class="d-none">Id</th>
                    <th class="">
                        <label class="custom-control custom-checkbox mb-0">
                            <input type="checkbox" id="checkheaderAssign" class="custom-control-input">
                            <span class="custom-control-label"></span>
                        </label>
                    </th>
                    <th>Form#</th>
                    <th>Old Form</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Age</th>
                    <th>Family Size</th>
                    <th>Status</th>
                    <th>House</th>
                    <th>Medical Probs</th>
                    <th>Zakat Eligible</th>
                    <th>Actions</th>
                </tr>
            </thead>          
        </table>
    </div>


<div id="modal_assigngrocerykit" class="modal">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header  bg-warning">
                <h5 class="modal-title text-white font-weight-bolder" id="modelAssignKitTitle"></h5>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <div class="modal-body" id="modalAssignKitBody">

            </div>

        </div>
    </div>
</div>
