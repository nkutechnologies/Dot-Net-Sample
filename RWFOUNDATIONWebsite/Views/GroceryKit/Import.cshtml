
@{
    ViewData["Title"] = "Import";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="container" style="margin-top: 100px;">
    <div class="card bg-secondary shadow border-0">
        <div class="card-header bg-white pb-5">
            <div class="text-muted text-left mb-3"><h3>Import Applications</h3></div>
        </div>
        <div class="card-body px-lg-5 py-lg-5 shadow">

            @using (Html.BeginForm("ImportExcelFile", "GroceryKit", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="file" id="filebtn" class="file-field" name="UploadedFile" required />
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <input type="submit" name="Submit" id="btnhide" class="btn btn-success" value="Upload" />
                        </div>
                    </div>
                </div>
            }
            <div>
                <a href="#">Back to List</a>
            </div>

        </div>
    </div>
</div>


