{
    <div class="card bg-white border-0">

        <div class="card-body px-lg-5 py-lg-5">
            <h5 class="card-title"> There is No Beneficiary Assigned yet!!!!</h5>
        </div>

    </div>
}

<div id="modal_sponcergrocerykit" class="modal">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header  bg-warning">
                <h5 class="modal-title text-white font-weight-bolder" id="modelSponserKitTitle"></h5>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <div class="modal-body" id="modalSponcerKitBody">

            </div>

        </div>
    </div>
</div>

<div class="modal modal-slide fade show" id="modals-slide" style="display: none;" aria-modal="true">
    <div class="modal-dialog">
        <form class="modal-content">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">×</button>
            <div class="modal-body">
                <div class="card bg-pattern-3-dark mb-4">
                    <div class="card-body text-center">
                        <i class="fa fa-dollar-sign bg-success ui-rounded-icon"></i>
                        <h4 class="mt-2"><span class="text-success"></span> Currency Converter</h4>
                    </div>
                </div>
                <div class="form-group">
                    <label class="text-info">Estimated Amount</label>
                    <div class="form-group">
                        <div class="input-wrap">
                            <input type="number" id="amount" min="1" step="1" name="amount" class="form-control" value="25000">
                        </div>
                    </div>
                </div>
                <label class="text-dark">Select Currency</label>
                <div class="form-group">
                    <select class="custom-select">
                        <option>USD</option>
                        <option>EUR</option>
                        <option>POND</option>
                        <option>CAD</option>
                        <option>SAR</option>
                        <option>DHM</option>
                    </select>
                </div>
                <button type="button" class="btn btn-primary btn-block">Convert</button>

                <div class="card mb-4 mt-2">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col-auto pr-0">
                                <i class="lnr lnr-diamond text-danger display-4"></i>
                            </div>
                            <div class="col text-right">
                                <h5 class="text-danger mb-0">$532.3</h5>
                                <p class="mb-0">Converted Amount</p>
                            </div>
                        </div>                       
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>