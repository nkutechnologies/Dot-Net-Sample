    <div class="card border-0 p-1">       
        <table class="table table-responsive table-striped table-bordered dataTable" role="grid" id="grocerkittablefordonor" width="100%">
            <thead class="">
                <tr>
                    <th class="">
                        <label class="custom-control custom-checkbox mb-0">
                            <input type="checkbox" id="checkheaderSponcer" class="custom-control-input">
                            <span class="custom-control-label"></span>
                        </label>
                    </th>
                    <th>Form#</th>
                    <th>Name</th>
                    <th>Age</th>
                    <th>Family Size</th>
                    <th>Status</th>
                    <th>House</th>
                    <th>Medical Probs</th>
                    <th>Zakat Eligible</th>
                    <th>Rating</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {

                    <tr>
                        <td>
                            <label class="custom-control custom-checkbox mb-0">
                                <input type="checkbox" value="@item.GroceryKitId" class="custom-control-input">
                                <span class="custom-control-label"></span>
                            </label>
                        </td>
                        <td>@item.FormNo</td>
                        <td class="text-primary">@item.FirstName  @item.LastName</td>
                        <td>@item.Age</td>
                        <td>@item.FamilySize</td>
                        <td>@item.Status</td>
                        <td>@item.ResidenceStatus</td>
                        <td>@item.MedicalProb</td>
                        <td>@item.ZakatAcceptable</td>
                        <td class="text-danger">@item.Rating / <span class="text-success">10</span></td>
                        <td class="d-inline-flex">
                            <a asp-controller="GroceryKit" asp-action="Detail" title="Details" asp-route-Id="@item.GroceryKitId" class="btn btn-sm btn-light mr-1  border-0"> <i class="feather icon-list text-dark"></i></a>

