@model IEnumerable<RWFOUNDATIONWebsite.DataModels.UserManagement.ApplicationUser>
@{
    ViewData["Title"] = "UserList";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

@if (Model.Any())
{
    <div class="card border-0 p-1">
        <div class="card-header">
            <div class="row">
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-6">
                    <div class="text-muted text-left">
                        <h4 class="card-title">List Of Users</h4>
                    </div>
                </div>                
            </div>
        </div>
        <table class="table card-table table-responsive" id="usertable"  width="100%">
            <thead class="">
                <tr>                    
                    <th>User Name</th>
                    <th>Email</th>
                    <th>Phone Number</th>
                    <th>Date Of Birth</th>
                    <th>Donate</th>
                    <th>Address</th>                    
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {

                    <tr>                        
                        <td>@item.UserName</td>
                        <td>@item.Email</td>
                        <td class="text-primary">@item.PhoneNumber</td>
                        <td>@item.DateOfBirth.ToString("dd-MM-yyyy")</td>
                        <td>@item.ToDonate</td>
                        <td>@item.Address</td>                       
                        <td class="d-inline-flex">                          
                            <a href="#" class="btn btn-sm btn-dark mr-1 bg-light border-0"><i class="feather icon-list text-white"></i></a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

}
else
{
    <div class="card bg-white border-0">

        <div class="card-body px-lg-5 py-lg-5">
            <h5 class="card-title"> There is No User Created yet!!!!</h5>
            <p class="text-success">Do you want to Create New?  Click <div class="row"><a asp-controller="Authentication" asp-action="SignUp" class="btn btn-info float-right">New</a></div></p>
        </div>

    </div>
}

@section Scripts{ 
   <script>
       $(document).ready(function () {
           $("#usertable").DataTable();
       });
   </script>
}