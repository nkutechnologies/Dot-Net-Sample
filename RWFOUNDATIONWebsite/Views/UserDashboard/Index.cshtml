
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
   
}

@if (User.IsInRole("Admin") || User.IsInRole("Donor") || User.IsInRole("Beneficiary"))
{

}
else
{
    <div class="card overflow-hidden">
        <div class="row no-gutters">
            <div class="col-md-10 offset-md-1">
                <div class="card-body media align-items-center">
                    <img src="~/assets/img/RW/userimage.png" alt="" class="d-block ui-w-80">
                    <div class="media-body ml-4">
                        <label class="">
                            @User.Identity.Name
                        </label>
                    </div>
                </div>
                <hr class="border-light m-0">

                <div class="card-body">
                    <form id="userupdateform">
                        <div class="row pl-0 pr-0">
                            <div class="col-xl-3 col-lg-3 col-md-3 col-sm-3 col-3">
                                <p>As</p>
                            </div>
                            <div class="col-xl-9 col-lg-9 col-md-9 col-sm-9 col-9">
                                <div class="d-flex">
                                    <label class="custom-control custom-radio">
                                        <input name="As" type="radio" id="Donorupdate" value="Donor" class="custom-control-input" checked>
                                        <span class="custom-control-label">Donor</span>
                                    </label>
                                    <label class="custom-control custom-radio ml-4">
                                        <input name="As" type="radio" id="Beneficiaryupdate"  value="Beneficiary" class="custom-control-input">
                                        <span class="custom-control-label">Beneficiary</span>
                                    </label>
                                </div>
                            </div>                           
                            <div class="col-xl-3 col-lg-3 col-md-3 col-sm-12 col-12">
                                <label for="PhoneNumberupdate">Mobile</label>
                            </div>
                            <div class="col-xl-9 col-lg-9 col-md-9 col-sm-12 col-12">
                                <div class="form-group">
                                    <input type="text" class="form-control" id="PhoneNumberupdate" name="PhoneNumberupdate"  placeholder="92 300 0000 111" />
                                </div>                                
                            </div>
                            <div class="col-xl-3 col-lg-3 col-md-3 col-sm-12 col-12">
                                <label for="dateofbirthupdate">Date Of Birth</label>
                            </div>
                            <div class="col-xl-9 col-lg-9 col-md-9 col-sm-12 col-12">
                                <div class="form-group">
                                    <input type="date" class="form-control" id="dateofbirthupdate" name="dateofbirthupdate" value="@DateTime.Now.ToString("yyyy-MM-dd")" placeholder="enter date of birth" />
                                </div>                                
                            </div>
                            <div class="col-xl-3 col-lg-3 col-md-3 col-sm-12 col-12">
                                <label for="addressupdate">Address</label>
                            </div>
                            <div class="col-xl-9 col-lg-9 col-md-9 col-sm-12 col-12">
                                <div class="form-group">
                                    <input type="text" class="form-control" id="addressupdate" name="addressupdate"  placeholder="Enter Your Address" />
                                </div>                               
                            </div>
                            <div class="col-xl-3 col-lg-3 col-md-3 col-sm-12 col-12">
                                <label for="todonateupdate" id="todonatelabelupdate">To Donate</label>
                            </div>
                            <div class="col-xl-9 col-lg-9 col-md-9 col-sm-12 col-12">
                                <div class="form-group">
                                    <select id="todonateupdate" name="todonateupdate" class="form-control">
                                        <option value="Zakat">Zakat</option>
                                        <option value="Donation">Donation</option>
                                    </select>
                                </div>                               
                            </div>
                            <div class="col-xl-3 col-lg-3 col-md-3 col-sm-12 col-12">
                                <label for="estimateupdate" id="estimatelabelupdate">Estimate Donation</label>
                            </div>
                            <div class="col-xl-9 col-lg-9 col-md-9 col-sm-12 col-12">
                                <div class="form-group">
                                    <input type="text" id="estimateupdate"  name="estimateupdate" class="form-control"  placeholder="Enter Your estimates" />
                                </div>                               
                            </div>                           
                        </div>
                        <div class="text-right mt-3">
                            <button type="submit" class="btn btn-primary">
                                <span class="spinner-border spinner-border-sm d-none" id="spinnerloaduser" role="status"></span>
                                Save changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    
}




